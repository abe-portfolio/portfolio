// デフォルトのPostgreSQLではなく SQLite データベースを使用
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// シンプルな User　モデルを定義
model User {
  // カラム名　型　オプション
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

// @id は主キーを指定するためのキーワード
// @default(autoincrement()) は自動インクリメントされるように指定するためのキーワード
// @unique  はユニークな値を指定するためのキーワード
// デフォルトでNOT NULLとなるため、NOT NULL制約を指定する必要はない
// 型の後に「?」をつけると、NULLを許可する
//   name  String   -> NOT NULL
//   name  String?  -> NULL OK
