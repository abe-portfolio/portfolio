{
  // ==========================================
  // 共通設定（全言語に適用）
  // ==========================================
  "workbench.colorTheme": "Default Dark+",
  
  // ==========================================
  // Python 設定セクション開始
  // ==========================================
  
  // Python シンタックスハイライトの統一設定（すべてのテーマに適用）
  // 注意: 各ルールのscopeが".python"で終わっているため、Pythonにのみ適用されます
  // GoやPHPなどの他の言語のシンタックスハイライトには影響しません
  "editor.tokenColorCustomizations": {
    "[*]": {
      "textMateRules": [
      {
        "scope": "keyword.control.flow.python",
        "settings": {
          "foreground": "#C586C0"
        }
      },
      {
        "scope": "keyword.other.python",
        "settings": {
          "foreground": "#C586C0"
        }
      },
      {
        "scope": "storage.type.function.python",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "entity.name.function.python",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "support.function.builtin.python",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "support.type.python",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "variable.parameter.python",
        "settings": {
          "foreground": "#9CDCFE"
        }
      },
      {
        "scope": "variable.other.readwrite.python",
        "settings": {
          "foreground": "#9CDCFE"
        }
      },
      {
        "scope": "string.quoted.single.python",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "string.quoted.double.python",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "constant.numeric.python",
        "settings": {
          "foreground": "#B5CEA8"
        }
      },
      {
        "scope": "comment.line.number-sign.python",
        "settings": {
          "foreground": "#6A9955"
        }
      },
      {
        "scope": "entity.name.type.class.python",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "punctuation.definition.string.begin.python",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "punctuation.definition.string.end.python",
        "settings": {
          "foreground": "#CE9178"
        }
      }
      ]
    }
  },
  
  // Python 言語固有設定
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  
  // Python 拡張機能の推奨設定
  "python.defaultInterpreterPath": "python",
  "python.languageServer": "Pylance",
  
  // ==========================================
  // Python 設定セクション終了
  // ==========================================
  
  // ==========================================
  // Go 設定セクション開始
  // ==========================================
  // Go言語の設定を追加する場合は、ここに記述してください
  // 例:
  // "[go]": {
  //   "editor.defaultFormatter": "golang.go",
  //   "editor.tabSize": 4,
  //   "editor.insertSpaces": true
  // },
  // "go.formatTool": "goimports",
  // ==========================================
  // Go 設定セクション終了
  // ==========================================
  
  // ==========================================
  // PHP 設定セクション開始
  // ==========================================
  // PHP言語の設定を追加する場合は、ここに記述してください
  // 例:
  // "[php]": {
  //   "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
  //   "editor.tabSize": 4,
  //   "editor.insertSpaces": true
  // },
  // ==========================================
  // PHP 設定セクション終了
  // ==========================================
  
  // ==========================================
  // 共通設定（全言語に適用）
  // ==========================================
  "editor.fontSize": 14,
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.semanticHighlighting.enabled": true
}

